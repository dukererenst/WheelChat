<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.google.edem.myapplication.register_vehicle">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:src="@drawable/img_car"
            android:tint="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="VEHICLE REGISTRATION"
            android:textColor="#fff"
            android:textSize="21sp" />

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/relativeLayout0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/pink">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="395dp"
                    android:layout_height="40dp">

                </Spinner>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayoutmake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout0"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/pink">

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="395dp"
                    android:layout_height="40dp">

                </Spinner>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayouttype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayoutmake"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/pink">

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="395dp"
                    android:layout_height="40dp">

                </Spinner>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayoutchasis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayouttype"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:layout_alignParentTop="true"

                    android:hint="CHASIS NUMBER"
                    android:textColorHint="#B3B6B7"
                    android:textSize="17sp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayoutregistration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayoutchasis"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:layout_alignParentTop="true"

                    android:hint="REGISTRATION NUMBER"
                    android:textColorHint="#B3B6B7"
                    android:textSize="17sp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayoutcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayoutregistration"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:layout_alignParentTop="true"

                    android:hint="VEHICLE COLOUR"
                    android:textColorHint="#B3B6B7"
                    android:textSize="17sp"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="0dp" />

            </RelativeLayout>

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayoutcolor"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-medium"
                android:text="I agree to the Terms and Conditions" />

            <Button
                android:id="@+id/btn_signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkBox1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimaryDark"
                android:text="ADD"
                android:textColor="#fff"
                android:textSize="21sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
